<!DOCTYPE html>
<html>
  <head>
    <title>Codepoets</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'stylesheets' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <%= render 'shared/navbar' %>
    <div class="container">
      <% flash.each do |key, value| %>
        <div class="<%= bootstrap_class_for(key) %>">
           <%= content_tag :div, value.html_safe %>
        </div>
      <% end %>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
