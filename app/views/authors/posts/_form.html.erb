<%= form_with(model: post, local: true, url: authors_posts_path, remote: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control" %>
  </div>
  <div class="field">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>
  <div class="field">
    <%= form.label :all_tags %>
    <%= form.text_field :all_tags, placeholder: "Tags separated with comma", class:"form-control" %>
  </div>
  <div class="actions">
    <%= form.submit "Create", class: "btn btn-success" %>
  </div>
<% end %>
